import api from 'src/api'
import axios from 'axios'
import qs from 'qs'
const state = {
  users: [],
  status: {},
  cookies: {}
}

const getters = {
  getUser: state => state.users,
  getUserStatus: state => state.status,
  getCookies: state => state.cookies
}

const mutations = {
  USER_DATA: (state, users) => {
    state.users = users
  },
  USER_STATUS: (state, status) => {
    state.status = status
  },
  USER_COOKIES: (state, cookies) => {
    state.cookies = cookies
  }
}

const actions = {
  getUser ({ state, commit }, param) {
    return api.post('/login', param).then((response) => {
      commit('USER_DATA', response.data)
    }).catch((error) => {
      console.log(error)
    })
  },
  getUserStatus ({ state, commit }, param) {
    return api.post('/islogin', param).then((response) => {
      console.log(response)
      commit('USER_STATUS', response)
    }).catch((error) => {
      console.log(error)
    })
  },
  doLogins ({ state, commit }) {
    axios({
      url: 'http://testadmin.aldbim.com/api/login',
      data: qs.stringify({ username: '18401792326', password: '123456' }),
      method: 'post',
      headers: {
        'X-Requested-With': 'XMLHttpRequest',
        'Content-Type': 'application/x-www-form-urlencoded'
      }
    }).then((response) => {
      console.log(response)
    }).catch((error) => {
      console.log(error)
    })
  },
  getCookies ({ state, commit }, param) {
    commit('USER_COOKIES', param)
  }
}

export default {
  state,
  getters,
  mutations,
  actions
}
