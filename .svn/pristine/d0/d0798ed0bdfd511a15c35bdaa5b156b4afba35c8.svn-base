<template>
  <nav id="nav" class="nav">
    <ul class="fl">
      <li v-for="i in menu">
        <a href="javascript:;" @click="push(i.url, i.click)"><i v-if="i.align !== 'right' && i.icon" :class="'fa fa-'+i.icon"></i> {{i.text}} <i v-if="i.align === 'right' && i.icon"
                                                                                                                                                 :class="'fa fa-'+i.icon"></i></a>
      </li>
    </ul>
    <div class="fr">
      <ul>
        <li v-for="i in menuRight"><b>
          <a href="javascript:;" @click="push(i.url, i.click)"><i v-if="i.align !== 'right' && i.icon" :class="'fa fa-'+i.icon"></i> {{i.text}} <i v-if="i.align === 'right' && i.icon"
                                                                                                                                                   :class="'fa fa-'+i.icon"></i></a>
        </b></li>
      </ul>
    </div>
  </nav>
</template>

<script>
  export default {
    data () {
      return {}
    },
    props: {
      menu: {
        type: Array
      },
      menuRight: {
        type: Array
      }
    },
    methods: {
      push (url, click) {
        if (!url) return
        if (click) click(this)
        this.$router.push(url)
      }
    }
  }
</script>

