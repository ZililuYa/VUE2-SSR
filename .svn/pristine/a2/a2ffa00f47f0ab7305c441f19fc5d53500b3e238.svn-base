<template>
  <div>
    <div class="featurebar featurebar-right">
      <ul class="ul">
        <li id="undoneTab" class="active">部门列表</li>
        <li class="pull-right"><a href="javascript:void(0);" @click="addModal=true" @hide="addModalClose"> <span class="glyphicon glyphicon-plus"></span> 新增部门</a></li>
      </ul>
    </div>
    <div class="main">
      <dataTable :tool="tool" :data="departmentList" :page="page" @pageChange="tableChange" :columns="columns"></dataTable>
    </div>
    <modal v-model="addModal" :title="editModal ? '编辑部门' : '新增部门'" @hide="addModalClose" ref="modal" id="add_modal">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label"><span class="text-danger">* </span>部门名称</label>
          <div class="col-sm-10">
            <input v-model="addForm.name" type="text" class="form-control">
          </div>
        </div>
      </form>
      <div slot="footer">
        <btn type="primary" @click="addSubmit">{{submit.text}}</btn>
        <btn @click="addModal=false">取消</btn>
      </div>
    </modal>
  </div>
</template>

<script>
  import { mapGetters, mapActions } from 'vuex'
  import api from 'src/api'
  import dataTable from '../../../components/table/table.vue'
  export default {
    name: 'department',
    data () {
      return {
        currentPage: 1,
        totalPage: 99,
        page: {
          total: 0,
          totalPage: 1,
          pageIndex: 1,
          pageSize: 20
        },
        editModal: false,
        addModal: false,
        addForm: {
          name: '',
          parentId: 0
        },
        submit: {
          text: '添加'
        },
        tool: [],
        columns: [{
          text: '编号',
          key: 'id',
          width: '100px',
          align: 'center'
        }, {
          text: '部门名称',
          key: 'name',
          align: 'center'
        }, {
          text: '操作',
          align: 'center',
          width: '160px',
          render: (h, params) => {
            return h('div', [
              h('a', {
                class: 'table-icon',
                attrs: {
                  href: 'javascript:void(0);',
                  title: '编辑部门'
                },
                on: {
                  click: () => {
                    this.editModal = true
                    this.submit.text = '编辑'
                    this.addModal = true
                    this.addForm.id = params.id
                    this.addForm.name = params.name
                  }
                }
              }, [
                h('span', {
                  class: 'glyphicon glyphicon-pencil'
                })
              ]),
              h('a', {
                class: 'table-icon',
                attrs: {
                  href: 'javascript:void(0);',
                  title: '删除部门'
                },
                on: {
                  click: () => {
                    this.delGroup(params)
                  }
                }
              }, [
                h('span', {
                  class: 'glyphicon glyphicon-remove'
                })
              ])
            ])
          }
        }]
      }
    },
    components: {
      dataTable
    },
    mounted () {
      // 客户端请求axios
      this.page.total = 1
      this.page.totalPage = 1
      this.page.pageSize = 20
      this.page.pageIndex = 1
      console.log('客户端~~~~~~部门', this.departmentList)
    },
    computed: {
      ...mapGetters({
        departmentList: 'departmentList'
      })
    },
    asyncData ({store, route}) {
      let param = {
        pager: true,
        pageSize: 20
      }
      store.dispatch('isDepartment', param)
    },
    methods: {
      ...mapActions([
        'isDepartment'
      ]),
      addSubmit () {
        /**
         * 添加部门  编辑部门
         */
        let vm = this
        let url = ''
        if (vm.editModal) {
          // 编辑
          url = '/v1/department/update'
        } else {
          // 添加
          url = '/v1/department/insert'
        }
        api.post(url, vm.addForm).then((response) => {
          this.isDepartment({pager: true, pageSize: 20})
          if (response.code === 200) {
            vm.editModal = false
            vm.addModal = false
            this.$notify({
              type: 'success',
              content: vm.submit.text + '成功'
            })
            vm.submit.text = '添加'
          } else {
            this.$notify({
              type: 'danger',
              content: response.message
            })
          }
        }).catch((error) => {
          console.log(error)
        })
      },
      delGroup (data) {
        /**
         * 删除部门
         */
        let vm = this
        this.$confirm({
          title: '提示',
          okText: '确定',
          cancelText: '取消',
          content: '您确定删除部门吗？'
        }).then(() => {
          vm.doDel(data)
        }).catch(() => {
        })
      },
      doDel (data) {
        /**
         * 执行删除部门
         */
        console.log(data)
        let param = {
          id: data.id
        }
        api.post('/v1/department/delete', param).then((response) => {
          this.isDepartment({pager: true, pageSize: 20})
          if (response.code === 200) {
            this.$notify({
              type: 'success',
              content: '删除成功'
            })
          } else {
            this.$notify({
              type: 'danger',
              content: response.message
            })
          }
        }).catch((error) => {
          console.log(error)
        })
      },
      tableChange () {
        /**
         * 改变分页
         */
      },
      addModalClose () {
        /**
         * 弹窗关闭
         */
        let vm = this
        vm.editModal = false
        vm.submit.text = '添加'
        vm.addForm = {}
        vm.addForm.name = ''
        vm.addForm.description = ''
      }
    }
  }
</script>

