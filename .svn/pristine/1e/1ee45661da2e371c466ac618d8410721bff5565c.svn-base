<template>
  <div class="">
    <div class="main">
      <div class="view-main">
        <div class="col-lg-2">
          <b>允许访问的视图</b>
        </div>
        <div class="col-lg-8">
          <form class="">
            <label class="checkbox-inline" v-for="item in menuList">
              <input type="checkbox" id="item.id" value="item.id" v-model="checkedMenus"> item.name
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" id="inlineCheckbox1" value="option1" v-model="checkedMenus"> 1
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" id="inlineCheckbox2" value="option2" v-model="checkedMenus"> 2
            </label>
            <label class="checkbox-inline">
              <input type="checkbox" id="inlineCheckbox3" value="option3" v-model="checkedMenus"> 3
            </label>
          </form>
        </div>
        <div class="col-lg-2">
          <span>空代表访问没有访问限制</span>
        </div>
        <div class="view-btn-group art-btn-group">
          <btn class="" type="primary" @click="menuSubmit">保存</btn>
          <a href="javascript:void(0)" class="btn btn-default" @click="goBack">返回</a>
        </div>
      </div>

    </div>
  </div>
</template>

<script>
  import { mapGetters } from 'vuex'
  import api from 'src/api'
  export default {
    name: 'view',
    data () {
      return {
        powerId: '',
        checkedMenus: []
      }
    },
    computed: {
      ...mapGetters({
        menuList: 'menuList'
      })
    },
    mounted () {
      // 客户端请求axios
      // 获取地址栏参数
      this.powerId = this.$route.params.id
      console.log('客户端获取菜单列表结果~~', this.menuList)
    },
    asyncData ({store}) {
      store.dispatch('isMenuList')
    },
    methods: {
      menuSubmit () {
        /**
         * 提交
         **/
        let vm = this
        let params = {}
        params.menuId = []
        params.id = vm.powerId
        vm.checkedMenus.forEach(function(item) {
          params.menuId.push(item)
        })
        api.post('/v1/permissiongroup/update', params).then((response) => {
          if (response.code === 200) {
            console.log('修改成功', response)
            vm.geBack()
          } else {
            this.$notify({
              type: 'danger',
              content: response.message
            })
          }
        }).catch((error) => {
          console.log(error)
        })
      },
      goBack () {
        /**
         * 返回上一页
         **/
        this.$router.go(-1)
      }
    }
  }
</script>

