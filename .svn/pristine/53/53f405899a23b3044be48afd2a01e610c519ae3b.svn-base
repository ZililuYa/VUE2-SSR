import api from 'src/api'

const state = {
  users: [],
  status: {},
  department: []
}

const getters = {
  getUser: state => state.users,
  getUserStatus: state => state.status,
  getDepartment: state => state.department
}

const mutations = {
  USER_DATA: (state, users) => {
    state.users = users
  },
  USER_STATUS: (state, status) => {
    state.status = status
  },
  DEPARTMENT_DATA: (state, department) => {
    state.department = department
  }
}

const actions = {
  getUser({ state, commit }, param) {
    console.log('getUser ACTION')
    param = { username: '13691425060', password: '123456' }
    return api.post('/login', param).then((response) => {
      commit('USER_DATA', response.data)
    }).catch((error) => {
      console.log(error)
    })
  },
  getUserStatus({ state, commit }, param) {
    console.log('getUserStatus开始执行')
    return api.get('/isLogin').then((response) => {
      commit('USER_STATUS', response)
    }).catch((error) => {
      console.log(error)
    })
  },
  doDepartment({ state, commit }, param) {
    return api.post('/department/list', param).then((response) => {
      commit('DEPARTMENT_DATA', response.data)
      console.log('服务端部门列表', response.code)
    }).catch((error) => {
      console.log(error)
    })
  }
}

export default {
  state,
  getters,
  mutations,
  actions
}
