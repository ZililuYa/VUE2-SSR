<script>
import api from 'src/api'
import bg from 'assets/images/login_bg.jpg'
import { mapActions } from 'vuex'
export default {
  name: 'Login',
  data () {
    return {
      bg,
      submit: {
        loading: false,
        text: '登 录'
      },
      ruleForm: {
        username: '13691425060',
        password: '123456'
      }
    }
  },
  created () { },
  asyncData ({ store }) {
    return store.dispatch(`doLogins`)
  },
  methods: {
    ...mapActions([
      'doLogins'
    ]),
    submits () {
      /**
        * 登录
       */
      let vm = this
      const param = vm.ruleForm
      api.post('/login', param).then((response) => {
        if (response.code === 200) {
          vm.$store.commit('USER_DATA', response.data)
          let companyId = response.data.companyId
          console.log('companyId', companyId)
          if (companyId) {
            vm.submit.text = '登录成功，跳转中...'
            this.$notify({
              type: 'success',
              content: '登录成功'
            })
            document.cookie = response.data.cookie
            setTimeout(function () {
              vm.submit.text = '登 录'
              vm.$router.replace({ path: '/' })
            }, 2000)
          } else {
            vm.submit.text = '登录中...'
            this.$confirm({
              title: '提示',
              okText: '确定',
              cancelText: '取消',
              content: '您还未绑定企业，是否立即创建企业？'
            }).then(() => {
              vm.submit.text = '登 录'
              this.$router.replace({ path: '/addCompany' })
            }).catch(() => {
              vm.submit.text = '登 录'
              // this.$notify('Delete canceled.')
            })
          }
        } else {
          vm.submit.text = '登 录'
          this.$notify({
            type: 'danger',
            content: response.message
          })
        }
      }).catch((error) => {
        console.log(error)
      })
    },
    submitForm () {
      /**
        * 登录验证
       */
      let vm = this
      vm.submit.text = '登录中...'
      let usernameVal = vm.ruleForm.username.trim()
      let passwordVal = vm.ruleForm.password.trim()
      if (usernameVal === '') {
        this.$notify({
          type: 'danger',
          content: '请输入用户名!'
        })
        return false
      }
      // else if (!(/^1[34578]\d{9}$/.test(usernameVal))) {
      //   this.$notify({
      //     type: 'danger',
      //     content: '请输入正确用户名（手机号）!'
      //   })
      //   return false
      // }
      if (passwordVal === '') {
        this.$notify({
          type: 'danger',
          content: '请输入密码!'
        })
        return false
      }
      // else if (passwordVal.length < 6) {
      //   this.$notify({
      //     type: 'danger',
      //     content: '密码不能小于6位'
      //   })
      //   return false
      // }
      vm.submits()
    }
  }
}
</script>
