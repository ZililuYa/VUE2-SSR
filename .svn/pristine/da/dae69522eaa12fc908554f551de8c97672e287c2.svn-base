    })
  },
  components: { dataTable },
  created() {
    // è·å–ç”¨æˆ·æƒé™èœå•ã€æŒ‰é’®
    const status = this.userStatus
    const menus = getUserPowerMenu(status, this.$route.path, '/system/taskType')
