      let vm = this
      vm.$router.push('/system/typeAdd')
    },
    edit(params) {
      /**
       * ä»»åŠ¡ç¼–è¾‘
       */
      let vm = this
      vm.$router.push({
        path: '/system/typeAdd',
        query: params
      })
    },
    dele(params) {
      /**
       * ä»»åŠ¡åˆ é™¤
       */
      let vm = this
      vm.$confirm({
        title: 'æç¤º',
        okText: 'ç¡®å®š',
        cancelText: 'å–æ¶ˆ',
