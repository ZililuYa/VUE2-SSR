import api from 'src/api'

const state = {
  list: {},
  job: {},
  log: []
}

const getters = {
  departmentList: state => state.list,  // 部门
  jobList: state => state.job,    // 职位
  logList: state => state.log   // 日志
}

const mutations = {
  DEPARTMENT_DATA: (state, data) => {
    state.list = data.data
  },
  JOB_DATA: (state, job) => {
    state.member = job
  },
  LOG_DATA: (state, data) => {
    state.log = data.data
  }
}

const actions = {
  isDepartment ({state, commit}, parameter) {
    return api.post('/v1/department/list', parameter).then((res) => {
      commit('DEPARTMENT_DATA', res)
    }).catch((error) => {
      console.log(error)
    })
  },
  isLog ({state, commit}, parameter) {
    return api.post('/v1/log/pager', parameter).then((res) => {
      commit('LOG_DATA', res)
    }).catch((error) => {
      console.log(error)
    })
  },
  isJob({ state, commit }, param) {
    return api.post('/v1/role/list', param).then((response) => {
      commit('JOB_DATA', response.data)
    }).catch((error) => {
      console.log(error)
    })
  }
}

export default {
  state,
  getters,
  mutations,
  actions
}
