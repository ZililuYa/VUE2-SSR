<template>
  <div class="container">
    <form class="form-signin">
      <input type="text" v-model="user" class="form-control" placeholder="Username">
      <input type="password" v-model="pass" class="form-control" placeholder="Password">
      <div class="checkbox">
        <label>
          <input type="checkbox" value="remember-me"> 记住我
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="button" @click="submits">Sign in</button>
    </form>
  </div>
</template>

<script>
import api from 'src/api'

export default {
  name: 'Login',
  data () {
    return {
      user: 'jiel2',
      pass: '123456'
    }
  },
  created () { },
  methods: {
    submits () {
      const param = { loginName: this.user, passwd: this.pass }
      api.post('/login', param).then((response) => {
        if (response.httpCode === 200) {
          this.$store.commit('USER_DATA', response.data)
          this.$router.replace({ path: '/' })
        } else {
          this.$notify({
            type: 'danger',
            content: '用户名或密码错误!'
          })
        }
      }).catch((error) => {
        console.log(error)
      })
    }
  }
}
</script>
